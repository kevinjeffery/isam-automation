{%if hostvars[item.host_name]['vmware_networks'][1] is defined %}
ethernet1.present = "TRUE"
ethernet1.networkName = "{{hostvars[item.host_name]['vmware_networks'][1]['name']}}"
ethernet1.virtualDev = "{{hostvars[item.host_name]['vmware_networks'][1]['device_type']}}"
ethernet1.addressType = "generated"
{%endif %}
{%if hostvars[item.host_name]['vmware_networks'][2] is defined %}
ethernet2.present = "TRUE"
ethernet2.networkName = "{{hostvars[item.host_name]['vmware_networks'][2]['name']}}"
ethernet2.virtualDev = "{{hostvars[item.host_name]['vmware_networks'][2]['device_type']}}"
ethernet2.addressType = "generated"
{%endif %}
scsi0:0.present = "TRUE"
scsi0:0.deviceType = "scsi-hardDisk"
scsi0:0.fileName = "{{ BS_vm_hostname }}.vmdk"
